{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/fire-maps-schema",
  "title": "Fire Species Maps Schema",
  "type": "object",
  "required": ["species"],
  "properties": {
    "species": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["species_code", "species_name", "images"],
        "properties": {
          "species_code": {"type": "string", "pattern": "^[a-z0-9]{5,8}$"},
          "species_name": {"type": "string", "minLength": 1},
          "images": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["file_name", "label", "url"],
              "properties": {
                "file_name": {"type": "string", "pattern": ".*\\.png$"},
                "label": {"type": "string"},
                "url": {"type": "string", "format": "uri"}
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}
